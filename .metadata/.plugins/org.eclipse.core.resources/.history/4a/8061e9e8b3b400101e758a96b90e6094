package com.aurionpro.app.mapper;

import com.aurionpro.app.dto.EmployeeRequestDto;
import com.aurionpro.app.dto.EmployeeResponseDto;
import com.aurionpro.app.entity.Employee;
import org.mapstruct.Mapper;
import org.mapstruct.Mapping;

@Mapper(componentModel = "spring", uses = {RoleMapper.class})
public interface EmployeeMapper {

    // This mapping is now straightforward because MapStruct will use RoleMapper
    // to convert the Employee's 'role' field to the ResponseDto's 'role' field.
    EmployeeResponseDto toResponseDto(Employee employee);

    // This is the more complex mapping. We are telling MapStruct:
    // "Take the 'roleId' from the source (EmployeeRequestDto)
    // and put it into a Role object in the 'role.id' field of the target (Employee)."
    @Mapping(source = "roleId", target = "role.id")
    Employee toEntity(EmployeeRequestDto requestDto);
}