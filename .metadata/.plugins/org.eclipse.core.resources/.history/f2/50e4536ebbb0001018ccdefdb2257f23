package com.aurionpro.app.repository;

import com.aurionpro.app.model.Employee;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;

@Repository
public interface EmployeeRepository extends JpaRepository<Employee, Long> {

    // Method to find an employee by ID only if they are not soft-deleted
    Optional<Employee> findByIdAndIsDeletedFalse(Long id);

    // Method to find all employees that are not soft-deleted
    List<Employee> findAllByIsDeletedFalse();

    // Method to check if an employee with a given email exists and is not soft-deleted
    boolean existsByEmailAndIsDeletedFalse(String email);
}